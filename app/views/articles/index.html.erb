<p id="notice"><%= notice %></p>

<h1>Записи блога</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Содержание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Просмотреть', article %></td>
        <td><%= link_to 'Изменить', edit_article_path(article) %></td>
        <td><%= link_to 'Удалить', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая запись', new_article_path %>
